<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_marginTop="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:id="@+id/first_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mr_baker"
                    android:contentDescription="@string/show"
                    android:src="@drawable/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:layout_toEndOf="@id/mr_baker"
                    android:id="@+id/widget_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin"
                    android:text="@string/show"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_margin="@dimen/margin"
            android:layout_below="@id/first_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/widget_ing_details"
                    android:text="@string/show"
                    android:layout_marginStart="@dimen/widget_margin"
                    android:layout_centerInParent="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



        </RelativeLayout>

</RelativeLayout>